# MMS 系統設定
# MMS API 的基礎 URL
MMS_BASE_URL=https://api-new.oneclass.co/mms/proxy/link-plus

# API 版本
MMS_API_VERSION=v1

# MMS API 金鑰（必要）
# 請向系統管理員申請 API 金鑰
MMS_API_KEY=your_mms_api_key_here

# Slack Webhook URL（必要）
# 請在 Slack 工作區設定中創建 Incoming Webhook
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Slack 請求超時時間（秒）
SLACK_TIMEOUT=10

# 通知設定
# 通知天數閾值
NOTIFICATION_DAYS_THRESHOLD=30

# 緊急通知閾值（天）- 小於此天數將顯示紅色警示
NOTIFICATION_URGENT_THRESHOLD=7

# 警告通知閾值（天）- 小於此天數將顯示黃色警示
NOTIFICATION_WARNING_THRESHOLD=30

# API 請求設定
# API 請求超時時間（秒）
API_TIMEOUT=30

# API 最大重試次數
API_MAX_RETRIES=3

# API 重試延遲時間（秒）
API_RETRY_DELAY=5

# API 分頁大小
API_PAGE_SIZE=50

# 日誌設定
# 日誌等級（DEBUG, INFO, WARNING, ERROR, CRITICAL）
LOG_LEVEL=INFO

# 日誌文件名稱
LOG_FILE=mms_notify.log

# 日誌文件最大大小（MB）
LOG_MAX_SIZE=10

# 日誌文件備份數量
LOG_BACKUP_COUNT=5

# 機構到期時間閾值（天）
# 系統會檢查此天數內即將到期的機構
EXPIRY_THRESHOLD=60
